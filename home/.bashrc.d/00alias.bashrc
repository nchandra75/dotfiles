# Useful aliases -*- shell-script -*-

# Put dircolours here since it fits only with the alias
alias ls='ls -F'
# no colour on Mac?
# eval `dircolors -b`
# alias ls='ls --color=auto'
alias l='ls -lAtr'

alias m='less -MMe'
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

alias ach='apt-cache search'

alias pylab='ipython --pylab'

alias h='homeshick'
alias goroot='sudo -E bash'
alias t='todo.sh'
