#!/bin/bash
SCANNER="niash:libusb:001:007"

# Get the files
a=$(mktemp -d)
cd $a

scanimage -d $SCANNER --format=tiff --batch=out%d.tif --batch-prompt --resolution 150 -l 0 -t 0 -x 210 -y 297

# Remove outfile.ps if exists
cp /dev/null outfile.ps

# Add the files
for i in `ls out*.tif`; 
do
  echo "Adding $i"
  tiff2ps -w 8.5 -h 11 $i >> outfile.ps
done

# Convert to PDF
ps2pdf outfile.ps
mv outfile.pdf /tmp
#rm -rf $a

